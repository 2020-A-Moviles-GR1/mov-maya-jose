<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCampeonAct"
            app:layout_constraintStart_toStartOf="@+id/txtNumCopInter"
            app:layout_constraintEnd_toEndOf="@+id/txtNumCopInter" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtNumCopInter"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFechaCreacion" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLiga"
            app:layout_constraintStart_toStartOf="@+id/txtLiga" app:layout_constraintEnd_toEndOf="@+id/txtLiga"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLiga" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre"
            app:layout_constraintStart_toStartOf="@+id/txtNombre" app:layout_constraintEnd_toEndOf="@+id/txtNombre"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombre" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEliminar" app:layout_constraintStart_toStartOf="@+id/txtCampeonAct"
            app:layout_constraintEnd_toEndOf="@+id/txtCampeonAct" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCampeonAct" app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:text="Actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActualizar" app:layout_constraintStart_toStartOf="@+id/btnEliminar"
            app:layout_constraintEnd_toEndOf="@+id/btnEliminar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEliminar"/>
    <Button
            android:text="Crear Jugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCrearJugador" app:layout_constraintStart_toStartOf="@+id/btnActualizar"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizar"/>
    <Button
            android:text="Gestionar Jugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGestionarJugador" app:layout_constraintStart_toStartOf="@+id/btnCrearJugador"
            app:layout_constraintEnd_toEndOf="@+id/btnCrearJugador" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCrearJugador"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumCopInter"
            app:layout_constraintStart_toStartOf="@+id/txtFechaCreacion"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaCreacion" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFechaCreacion"/>
    <Button
            android:text="MenÃº"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenuRetorno" app:layout_constraintStart_toStartOf="@+id/btnGestionarJugador"
            app:layout_constraintEnd_toEndOf="@+id/btnGestionarJugador"
            app:layout_constraintTop_toBottomOf="@+id/btnGestionarJugador"/>
</android.support.constraint.ConstraintLayout>